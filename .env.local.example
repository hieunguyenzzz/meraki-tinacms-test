# TinaCMS Self-Hosted Backend Configuration
# Copy this file to .env.local and fill in your values

# ============================================
# DATABASE
# ============================================
# For local development with Docker
DATABASE_URL=postgresql://tinacms:tinacms_dev_password@localhost:5432/tinacms

# For production (replace with your server details)
# DATABASE_URL=postgresql://username:password@your-server:5432/tinacms

# ============================================
# GITHUB OAUTH & GIT PROVIDER
# ============================================
# Create OAuth App: https://github.com/settings/developers
# Homepage URL: http://localhost:3000 (or your production URL)
# Callback URL: http://localhost:3000/api/auth/callback/github

GITHUB_CLIENT_ID=your_github_oauth_client_id
GITHUB_CLIENT_SECRET=your_github_oauth_client_secret

# Repository details
GITHUB_OWNER=hieunguyenzzz
GITHUB_REPO=meraki-tinacms-test
GITHUB_BRANCH=main

# Personal Access Token for Git operations
# Create at: https://github.com/settings/tokens
# Required scopes: repo (full control)
GITHUB_PERSONAL_ACCESS_TOKEN=ghp_your_personal_access_token

# ============================================
# AUTH.JS (NextAuth)
# ============================================
# Base URL for your application
NEXTAUTH_URL=http://localhost:3000

# Secret for JWT encryption (generate with: openssl rand -base64 32)
# MUST be different in production!
NEXTAUTH_SECRET=your_nextauth_secret_min_32_characters_long

# ============================================
# TINACMS
# ============================================
# Set to "false" for self-hosted backend mode
TINA_PUBLIC_IS_LOCAL=false

# TinaCMS token (optional, for additional security)
# Generate a random string for this
TINA_TOKEN=your_random_tina_token

# ============================================
# PRODUCTION SETTINGS (for deployment)
# ============================================
# Set to production when deploying
# NODE_ENV=production

# ============================================
# ADMIN USERS (Optional)
# ============================================
# Comma-separated list of GitHub usernames allowed to access admin
# If not set, any authenticated GitHub user can access
# ALLOWED_GITHUB_USERS=hieunguyenzzz,user2,user3
